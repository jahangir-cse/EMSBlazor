@implements IDisposable
@if (allState.ShowOvertimeType)
{
    <div class="container my-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4>Overtime Type</h4>
                        <button class="btn btn-outline-success" @onclick="OpenDialog"><i class="bi bi-plus-circle-dotted"></i>Add Type</button>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Id</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (OvertimeType is not null)
                                {
                                    int count = 1;
                                    foreach (var item in OvertimeTypes)
                                    {
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>
                                                <i class="bi bi-pencil text-info pointer" @onclick="()=>EditClicked(item)"></i>
                                                <i class="bi bi-trash text-danger pointer" @onclick="() => DeleteClicked(item)"></i>
                                            </td>
                                        </tr>
                                        count++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4">
                                            <div class="alert alert-info text-center">No General Departmnet adde yet!</div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<OvertimeTypeDialog @ref="overtimeTypeDialog" HandleSaveOperationEvent="HandleSaveOperationEvent" OvertimeType="OvertimeType" />
@code {
    OvertimeTypeDialog? overtimeTypeDialog;
    OvertimeType OvertimeType = new();
    public string Title { get; set; } = "Add";
    public List<OvertimeType> OvertimeTypes { get; set; } = new();

    protected async override Task OnInitializedAsync()
    {
        await GetOvertimeTypes();
        allState.Action += StateHasChanged;
    }

    private async Task GetOvertimeTypes()
    {
        OvertimeTypes = await overtimeTypeService.GetAll(Constants.OvertimeTypeBaseUrl);
    }

    private async Task HandleSaveOperationEvent(OvertimeType overtimeType)
    {
        bool successCheck = false;
        if (overtimeType.Id > 0)
        {
            var result = await overtimeTypeService.Update(overtimeType, Constants.OvertimeTypeBaseUrl);
            successCheck = await DisplayMessage(result.Flag, result.Message);
        }
        else
        {
            var result = await overtimeTypeService.Insert(overtimeType, Constants.OvertimeTypeBaseUrl);
            successCheck = await DisplayMessage(result.Flag, result.Message);
        }
        if (successCheck)
        {
            OvertimeType = new();
            await GetOvertimeTypes();
            overtimeTypeDialog?.ChangeTitle("Add");
        }
    }

    private void EditClicked(OvertimeType type)
    {
        overtimeTypeDialog?.ChangeTitle("Update");
        OvertimeType = type;
        OpenDialog();
    }

    private async Task DeleteClicked(OvertimeType type)
    {
        bool confirm = await dialogService.ConfirmAsync($"Are you sure you want to delete {type.Name} ?", "Confirm Delete");
        if (!confirm) return;

        var response = await overtimeTypeService.DeleteById(type.Id, Constants.OvertimeTypeBaseUrl);
        if (await DisplayMessage(response.Flag, response.Message))
            await GetOvertimeTypes();
    }

    private async Task<bool> DisplayMessage(bool flag, string message)
    {
        if (flag)
        {
            await dialogService.AlertAsync(message, "Success Operation");
            return true;
        }
        else
        {
            await dialogService.AlertAsync(message, "Alert!");
            return false;
        }
    }

    void OpenDialog()
    {
        overtimeTypeDialog?.OpenDialog();
    }
    public void Dispose()
    {
        allState.Action -= StateHasChanged;
    }
}
