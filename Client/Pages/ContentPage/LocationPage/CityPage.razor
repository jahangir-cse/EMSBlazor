@implements IDisposable
@if (allState.ShowCity)
{
    <div class="container my-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4>City</h4>
                        <button class="btn btn-outline-success" @onclick="AddButtonClicked"><i class="bi bi-plus-circle-dotted"></i>Add City</button>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Id</th>
                                    <th scope="col">Country</th>
                                    <th scope="col">City</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(Citys is not null)
                                {
                                    int count = 1;
                                    foreach(var item in Citys)
                                    {
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Id</td>
                                            <td>@item.Country!.Name</td>
                                            <td>@item.Name</td>
                                            <td>
                                                <i class="bi bi-pencil text-info pointer" id="cursorStyle" @onclick="()=>EditClicked(item)"></i>
                                                <i class="bi bi-trash text-danger pointer" id="cursorStyle" @onclick="() => DeleteClicked(item)"></i>
                                            </td>
                                        </tr>
                                        count++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4">
                                            <div class="alert alert-info text-center">No City added yet!</div>
                                        </td>
                                    </tr>
                                }                                                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<CityDialog @ref="cityDialog" HandleSaveOperationEvent="HandleSaveOperationEvent" City="City" Countries="Countries" />
@code {
    public string Title { get; set; } = "Add";
    CityDialog? cityDialog;
    City City = new();
    public List<Country> Countries { get; set; } = new();
    public List<City> Citys { get; set; } = new();
    protected async override Task OnInitializedAsync()
    {
        await GetCitys();
        await GetCountries();
        allState.Action += StateHasChanged;
    }
    private async Task GetCitys()
    {
        Citys = await cityService.GetAll(Constants.CityBaseUrl);
    }
    private async Task GetCountries()
    {
        Countries = await countryService.GetAll(Constants.CountryBaseUrl);
    }
    private async Task HandleSaveOperationEvent(City city)
    {
        bool successCheck = false;
        if(city.Id > 0)
        {
            var result = await cityService.Update(city, Constants.CityBaseUrl);
            successCheck = await DisplayMessage(result.Flag, result.Message);
        }
        else
        {
            var result = await cityService.Insert(city, Constants.CityBaseUrl);
            successCheck = await DisplayMessage(result.Flag, result.Message);
        }
        if (successCheck)
        {
            City = new();
            await GetCitys();
            cityDialog?.ChangeTitle("Add");
        }
    }
    private void AddButtonClicked()
    {
        cityDialog?.ChangeTitle("Add");
        City = new();
        OpenDialog();
    }
    private void EditClicked(City city)
    {
        cityDialog?.ChangeTitle("Update");
        City = city;
        OpenDialog();
    }
    private async Task DeleteClicked(City city)
    {
        bool confirm = await dialogService.ConfirmAsync($"Are you sure you want to delete {city.Name} ?", "Confirm Delete");
        if (!confirm) return;

        var response = await cityService.DeleteById(city.Id, Constants.CityBaseUrl);
        if (await DisplayMessage(response.Flag, response.Message))
            await GetCitys();
    }
    private async Task<bool> DisplayMessage(bool flag, string message)
    {
        if (flag)
        {
            await dialogService.AlertAsync(message, "Success Operation");
            return true;
        }
        else
        {
            await dialogService.AlertAsync(message, "Alert!");
            return false;
        }
    }
    void OpenDialog()
    {
        cityDialog?.OpenDialog();
    }
    public void Dispose()
    {
        allState.Action -= StateHasChanged;
    }
}
