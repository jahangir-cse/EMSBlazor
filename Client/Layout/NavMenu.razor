<AuthorizeView>
    <Authorized>
        <div class="top-row ps-3 navbar navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="">
                    Welcome, @context.User.Identity!.Name
                </a>
                <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>

        <div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
            <nav class="flex-column">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" @onclick="ShowAdminMenuContainer" href="javascript:void()">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Administration
                    </NavLink>
                    <div class="nav-link p-2 text-white" style="margin-left: 2rem;visibility: @CssStyle">
                        <ul class="list-group list-unstyled">
                            <li>
                                <a class="nav-link" @onclick="UserClicked">Users</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="nav-item px-3" style="margin-top: @DepartmentMargin">
                    <NavLink class="nav-link" @onclick="ShowDepartmentContainer" href="javascript:void()">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Management
                    </NavLink>
                    <div class="nav-link p-2 text-white" style="margin-left: 2rem;visibility: @DepartmentCssStyle">
                        <ul class="list-group list-unstyled">
                            <li>
                                <a class="nav-link" @onclick="GeneralDepartmentClicked">General Department</a>
                            </li>
                            <li>
                                <a class="nav-link" @onclick="DepartmentClicked">Department</a>
                            </li>
                            <li>
                                <a class="nav-link" @onclick="BranchClicked">Branch</a>
                            </li>
                            <li>
                                <hr />
                            </li>
                            <li>
                                <a class="nav-link" @onclick="CountryClicked">Country</a>
                            </li>
                            <li>
                                <a class="nav-link" @onclick="CityClicked">City</a>
                            </li>
                            <li>
                                <a class="nav-link" @onclick="TownClicked">Town</a>
                            </li>
                            <li>
                                <hr />
                            </li>
                            <li>
                                <a class="nav-link" @onclick="EmployeeClicked">Employee</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </Authorized>
</AuthorizeView>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    public string DepartmentMargin { get; set; } = "-3.5rem";
    private string CssStyle = "hidden";
    public bool ShowHide { get; set; } = false;

    private void ShowAdminMenuContainer()
    {
        ShowHide = !ShowHide;
        if (ShowHide)
        {
            DepartmentMargin = "0";
            CssStyle = "visible";
        }
        else
        {
            DepartmentMargin = "-3.5rem";
            CssStyle = "hidden";
        }
    }

    private string DepartmentCssStyle = "hidden";
    public bool ShowHideDepartment { get; set; } = false;
    private void ShowDepartmentContainer()
    {
        ShowHideDepartment = !ShowHideDepartment;
        if (ShowHideDepartment)
            DepartmentCssStyle = "visible";
        else
            DepartmentCssStyle = "hidden";
    }

    void GeneralDepartmentClicked() => allState.GeneralDepartmentClicked();
    void DepartmentClicked() => allState.DepartmentClicked();
    void BranchClicked() => allState.BranchClicked();
    void CountryClicked() => allState.CountryClicked();
    void CityClicked() => allState.CityClicked();
    void TownClicked() => allState.TownClicked();
    void EmployeeClicked() => allState.EmployeeClicked();
    void UserClicked() => allState.UserClicked();
}
